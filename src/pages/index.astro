<style>
:root {
  --primary: #E00000;
  --dark: #0A0F1C;
  --gray: #6B7280;
  --light: #F5F7FA;
  --gradient: linear-gradient(135deg, #E00000 0%, #7A0000 100%);
}

* { margin: 0; padding: 0; box-sizing: border-box; }

html, body {
  height: 100%;
  overflow: hidden;
  font-family: 'Inter', sans-serif;
  background: white;
  color: var(--dark);
}

.slide-container {
  height: 100vh;
  width: 100vw;
  overflow: hidden;
  position: relative;
}

.slides {
  display: flex;
  flex-direction: column;
  transition: transform 0.8s cubic-bezier(0.77, 0, 0.175, 1);
}

section {  
  height: 100vh;
  padding: 100px 60px;
  display: flex;
  align-items: center;
  position: relative;
}

.container {
  max-width: 1100px;
  margin: 0 auto;
}

h1 { font-size: 60px; font-weight: 900; line-height: 1.1; }
h2 { font-size: 42px; font-weight: 700; margin-bottom: 20px; }
p  { font-size: 20px; color: var(--gray); max-width: 900px; }

.highlight { color: var(--primary); font-weight: 800; }
.section-light { background: var(--light); }

.logo {
  position: fixed;
  top: 30px;
  left: 50px;
  font-weight: 900;
  letter-spacing: 3px;
  font-size: 18px;
  z-index: 1000;
}

.cta {
  background: var(--gradient);
  color: white;
}

.cta p { color: #ffe5e5; }

</style>
</head>

